<h1><%= @user.name %>'s cars</h1>


<% if @cars.length > 0 %>
<% form_tag(car_remove_user_path(@user)) do %>
<table>
<tr>
<th>Car</th>
<th>Remove?</th>
</tr>

<% for car in @cars do %>
<tr>
<td><%= h car.name %></td>
<td><%= check_box_tag "cars[]", car.id %></td>
</tr>
<% end %>
</table>
<br />
<%= submit_tag "Remove checked cars" %>
<% end %>

<% else %>
<p>No cars.</p>
<% end %>

<h3>Enter a new car</h3>

<% if @user.cars.count < Car.count then %>
   <% form_tag(car_add_user_path(@user)) do %>
     <%= select_tag(:car, options_from_collection_for_select(@car.unowned_cars, :id, :name)) %>
     <%= submit_tag 'Enter' %>
   <% end %>
<% else %>
  <p> <%= h @user.name %> already owns every car there is. </p>
<% end %>

<p> <% link_to "Back", @user %></p>
